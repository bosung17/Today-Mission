package view;

import java.util.Arrays;
import java.util.Scanner;

public class Solution {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		// 테스트 케이스 10개
		for (int i=0; i<1; i++) {
			
			// 건물의 개수 N 입력 받기
			int N = sc.nextInt();
			
			// 건물 높이를 입력받는 배열 arr 만들기
			int[] arr = new int[N];
			
			// N개의 건물 높이 입력 받기
			for (int j=0; j<N; j++) {
				arr[j] = sc.nextInt();
			}
			
			// 각 건물의 조망권 확보 세대 수 구하기
			
			// N개의 건물의 조망권
			int[] diff = new int[N];
			for (int j=2; j<N-2; j++) {
				diff[j] = 255;
			}
			for (int j=2; j<N-2; j++) {
				for (int k = j-2; k<j+3; k++) {
					if (k!=j) {
						if (arr[j] - arr[k] <=0) {
							diff[j] = 0;
						}
						else if (arr[j] - arr[k] < diff[j]) {
							diff[j] = arr[j] - arr[k];
						}
					}
				}
			}
			
			System.out.println(Arrays.toString(diff));
			
//			int[] view = new int[N];
//			
//			for (int j=2; j<N-2; j++) {
//				view[j
//			}
			
			
		}
			
	}
}
